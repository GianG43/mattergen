    "def say_hi(name=\"\"):\n",
    "    print(\"Hello\", name)\n",
    "\n",
    "while True:\n",
    "    name = input(\"Your name: \")\n",
    "    if name in (\"Stop\", \"stop\", \"Exit\", \"exit\"):\n",
    "        print(\"Goodbye! Have a nice day!\")\n",
    "        break\n",
    "    say_hi(name)"
